{% extends "labels_base.html.jinja2" %}
{% import "svg_icons.html.jinja2" as svg %}

{% block title %}Potting Lot Labels{% endblock %}

{% block label_content %}
<table class="label-table">
    <tr class="header-row">
        <td class="header-cell" colspan="3">
            {{ record.naam }}
            ~{{ record.klant_code|default('', true) }}
        </td>
        <td class="header-cell">
            <img src="{{ record.qr_code }}" alt="QR Code" class="qr-code">
        </td>
    </tr>
    <tr class="middle-row">
        <td class="middle-cell" colspan="2">
            {{ svg.lily_pot() }}
            {{ record.id }}
        </td>
        <td class="middle-cell" colspan="2">
            {{ svg.lily_bulb() }}
            {{ record.bollen_code }}
        </td>
    </tr>
    <tr class="bottom-row">
        <td class="bottom-cell" colspan="4">
            {{ record.oppot_datum }} |
            {{ record.bolmaat }} |
            {{ record.cert_nr|default('', true) }}
        </td>
    </tr>
</table>
{% endblock %}
