{% extends "base.html.jinja2" %}

{% block title %}Bulb Picklist Labels{% endblock %}

{% block styles %}
.label {
    width: {{ label_width }};
    height: {{ label_height }};
    box-sizing: border-box;
    border: 1px solid #000;
    display: grid;
    grid-template-rows: 33% 33% 33%;
    grid-template-columns: 50% 50%;
    page-break-after: always;
}

.label:last-child {
    page-break-after: avoid;
}

.plant-name {
    grid-column: 1 / 3;
    grid-row: 1;
    font-size: 120%;
    font-weight: bold;
    padding: 2mm;
    position: relative;
    padding-right: 30mm; /* Make room for QR code */
}

.url-text {
    display: block;
    font-size: 40%;
    color: #999;
    font-weight: normal;
    margin-top: 2mm;
}

.code-left {
    grid-column: 1;
    grid-row: 2;
    font-size: 100%;
    padding: 3mm;
    border-top: 1px solid #000;
    border-right: 1px solid #000;
    position: relative;
}

.code-right {
    grid-column: 2;
    grid-row: 2;
    font-size: 100%;
    padding: 3mm;
    border-top: 1px solid #000;
    position: relative;
}

.location {
    grid-column: 1;
    grid-row: 3;
    font-size: 100%;
    padding: 3mm;
    border-top: 1px solid #000;
    border-right: 1px solid #000;
    position: relative;
}

.trays {
    grid-column: 2;
    grid-row: 3;
    font-size: 100%;
    padding: 3mm;
    border-top: 1px solid #000;
    position: relative;
}

.qr-code {
    position: absolute;
    top: 1mm;
    right: 1mm;
    width: 25%;
    height: auto;
    z-index: 10;
    background-color: white;
    padding: 2px;
}

.label-text {
    display: block;
    font-size: 80%;
    color: #999;
    margin-top: 2mm;
}
{% endblock %}

{% block content %}
{% for record in records %}
<div class="label">
    <div class="plant-name">
        {{ record.ras }}
        <span class="url-text">{{ record.scan_url }}</span>
        <img src="{{ record.qr_code }}" alt="QR Code" class="qr-code">
    </div>
    <div class="code-left">
        {{ record.bollen_code }}
        <span class="label-text">Bollencode</span>
    </div>
    <div class="code-right">
        {{ record.id }}
        <span class="label-text">Oppotpartij</span>
    </div>
    <div class="location">
        {{ record.locatie }}
        <span class="label-text">Locatie</span>
    </div>
    <div class="trays">
        {{ record.aantal_bakken|int }} kratten
        <span class="label-text">Aantal</span>
    </div>
</div>
{% endfor %}
{% endblock %}
