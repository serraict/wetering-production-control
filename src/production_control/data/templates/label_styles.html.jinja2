/* Label container */
.label-container {
width: 100%;
}

/* Label styling */
.label {
width: {{ label_width }};
height: {{ label_height }};
box-sizing: border-box;
padding: 1mm;
page-break-inside: avoid;
page-break-after: always;
}

/* Table styling */
.label-table {
width: 100%;
height: 100%;
border-collapse: collapse;
table-layout: fixed;
}

.label-table td {
border: 1px solid #ccc;
padding: 1mm;
position: relative;
}

/* Header row - 50% height */
.header-row {
height: 50%;
}

.header-cell {
font-size: 200%;
font-weight: 600;
position: relative;
valign: top;
}

/* Middle row - 40% height */
.middle-row {
height: 40%;
}

.middle-cell {
font-size: 170%;
font-weight: 600;
position: relative;
}

/* Bottom row - 10% height */
.bottom-row {
height: 10%;
}

.bottom-cell {
font-size: 70%;
position: relative;
}

/* QR code styling */
.qr-code {
width: 100%;
height: auto;
z-index: 10;
background-color: white;
padding: 0;
margin: 0;
border: none;
box-sizing: border-box;
}

/* SVG icon styling */
.icon-svg {
position: absolute;
top: 1mm;
right: 1mm;
width: 20px;
height: 20px;
}
