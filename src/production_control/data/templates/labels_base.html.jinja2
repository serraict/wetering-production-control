{% extends "base.html.jinja2" %}

{% block title %}{{ title|default("Labels") }}{% endblock %}

{% block styles %}
{% include "label_styles.html.jinja2" %}

/* Additional module-specific styles */
{% block additional_styles %}{% endblock %}
{% endblock %}

{% block content %}
<div class="label-container">
    {% for record in records %}
    <div class="label">
        {% block label_content scoped %}
        <!-- Default label content - should be overridden by specific templates -->
        <table class="label-table">
            <tr class="header-row">
                <td class="header-cell" colspan="3">
                    {{ record.naam|default("") }}
                </td>
                <td class="header-cell">
                    <img src="{{ record.qr_code }}" alt="QR Code" class="qr-code">
                </td>
            </tr>
            <tr class="middle-row">
                <td class="middle-cell" colspan="2">
                    {{ record.id|default("") }}
                </td>
                <td class="middle-cell" colspan="2">
                    {{ record.bollen_code|default("") }}
                </td>
            </tr>
            <tr class="bottom-row">
                <td class="bottom-cell" colspan="4">
                    {{ record.oppot_datum|default("") }}
                </td>
            </tr>
        </table>
        {% endblock %}
    </div>
    {% endfor %}
</div>
{% endblock %}
